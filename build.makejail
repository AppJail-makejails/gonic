INCLUDE options/network.makejail
INCLUDE gh+AppJail-makejails/go

CMD echo "======> Installing dependencies (build) <======"
PKG git-lite pkgconf taglib sqlite3

CMD echo "======> Cloning... <======"
CMD git clone --depth 1 https://github.com/sentriz/gonic.git /gonic

CMD echo "======> Compiling... <======"

WORKDIR /gonic

RUN go mod download
ENV GOOS=freebsd
RUN %{GO_EXECUTABLE} build -o gonic cmd/gonic/gonic.go
