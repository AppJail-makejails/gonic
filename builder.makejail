INCLUDE options/options.makejail
INCLUDE resizewin-fix.makejail

OPTION ephemeral

CMD echo "======> Installing dependencies (build) <======"
PKG git-lite go125 pkgconf taglib sqlite3

CMD echo "======> Cloning... <======"
CMD git clone --depth 1 https://github.com/sentriz/gonic.git /gonic

CMD echo "======> Compiling... <======"

WORKDIR /gonic

RUN go125 mod download
ENV GOOS=freebsd
RUN go125 build -o gonic cmd/gonic/gonic.go
